{
	"compilerOptions": {
		"downlevelIteration": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"experimentalDecorators": true,
		"isolatedModules": true,
		"lib": [
			"dom",
			"es2020"
		],
		"module": "ESNext",
		"moduleResolution": "node",
		"sourceMap": true,
		"declaration": true,
		"strict": true,
		"target": "ESNext",
		"outDir": "dist",
		"skipLibCheck": true
	},
	"exclude": [
		"node_modules/**/*",
		"**/*.test.ts"
	],
	"include": [
		"src/**/*",
		"abis/**/*"
	]
}
